/* 容器 */
.case-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 顶部标题 */
.header-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 40rpx 80rpx;
  text-align: center;
}

.header-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 16rpx;
}

.header-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 统计数据 */
.stats-section {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: #ffffff;
  margin: -40rpx 30rpx 30rpx;
  padding: 40rpx 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  position: relative;
  z-index: 10;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999999;
}

/* 案例列表 */
.case-list {
  padding: 0 30rpx;
}

.case-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

/* 案例头部 */
.case-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.case-company {
  display: flex;
  align-items: center;
}

.company-logo {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  background: #f0f0f0;
}

.company-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.case-industry {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.industry-internet {
  background: rgba(102, 126, 234, 0.1);
  color: #667eea;
}

.industry-communication {
  background: rgba(244, 67, 54, 0.1);
  color: #f44336;
}

.industry-ecommerce {
  background: rgba(255, 152, 0, 0.1);
  color: #ff9800;
}

.industry-lifestyle {
  background: rgba(76, 175, 80, 0.1);
  color: #4caf50;
}

/* 项目信息 */
.case-project {
  margin-bottom: 24rpx;
}

.project-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 12rpx;
}

.project-desc {
  display: block;
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
}

/* 客户评价 */
.case-review {
  background: #f9f9f9;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.review-header {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.quote-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
  margin-top: 4rpx;
}

.reviewer-info {
  display: flex;
  flex-direction: column;
}

.reviewer-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 4rpx;
}

.reviewer-title {
  font-size: 24rpx;
  color: #999999;
}

.review-content {
  display: block;
  font-size: 28rpx;
  color: #555555;
  line-height: 1.8;
  font-style: italic;
}

/* 项目成果 */
.case-results {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.result-item {
  display: flex;
  align-items: center;
}

.result-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 12rpx;
}

.result-text {
  font-size: 26rpx;
  color: #666666;
}

/* 案例底部 */
.case-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.view-detail {
  font-size: 28rpx;
  color: #667eea;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
}
