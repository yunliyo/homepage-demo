/* 容器 */
.about-container {
  padding: 30rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 通用section */
.section {
  margin-bottom: 40rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 标题 */
.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-left: 20rpx;
  border-left: 6rpx solid #07c160;
}

/* 简介内容 */
.intro-content {
  font-size: 28rpx;
  line-height: 1.8;
  color: #666;
  text-align: justify;
}

/* 使命愿景卡片 */
.mission-vision-container {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  padding: 30rpx;
  text-align: center;
  box-shadow: 0 6rpx 16rpx rgba(102, 126, 234, 0.3);
}

.card:last-child {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  box-shadow: 0 6rpx 16rpx rgba(245, 87, 108, 0.3);
}

.card-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 12rpx;
}

.card-content {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.95);
  line-height: 1.6;
}

/* 时间线 */
.timeline {
  position: relative;
  padding-left: 40rpx;
}

.timeline-item {
  position: relative;
  padding-bottom: 40rpx;
}

.timeline-item:last-child {
  padding-bottom: 0;
}

.timeline-item::before {
  content: '';
  position: absolute;
  left: -24rpx;
  top: 20rpx;
  bottom: 20rpx;
  width: 4rpx;
  background: linear-gradient(to bottom, #07c160, #1aad19);
}

.timeline-item:last-child::before {
  display: none;
}

.timeline-dot {
  position: absolute;
  left: -32rpx;
  top: 12rpx;
  width: 20rpx;
  height: 20rpx;
  background: #07c160;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: 0 0 0 4rpx rgba(7, 193, 96, 0.2);
}

.timeline-year {
  font-size: 32rpx;
  font-weight: bold;
  color: #07c160;
  margin-bottom: 8rpx;
}

.timeline-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 企业文化网格 */
.culture-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.culture-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 20rpx 10rpx;
  transition: all 0.3s;
}

.culture-item:active {
  transform: scale(0.95);
  background: #e9ecef;
}

.culture-icon {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 12rpx;
}

.culture-text {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

/* 联系我们列表 */
.contact-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.contact-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  flex-shrink: 0;
}

.contact-value {
  font-size: 28rpx;
  color: #666;
  margin-left: 10rpx;
}
