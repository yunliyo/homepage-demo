.serve-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f5f7fa 0%, #ffffff 100%);
  padding-bottom: 40rpx;
}

/* 顶部轮播卡片 */
.slider-section {
  margin: 24rpx;
  overflow: hidden;
}

.slider-swiper {
  width: 100%;
  height: 280rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.slider-card {
  width: 100%;
  height: 100%;
  position: relative;
  border-radius: 20rpx;
  overflow: hidden;
}

.slider-image {
  width: 100%;
  height: 100%;
}

.slider-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
  padding: 40rpx 24rpx 24rpx;
}

.slider-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 8rpx;
}

.slider-desc {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 通用区块样式 */
.section {
  margin: 30rpx 24rpx;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 28rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-right: 20rpx;
}

.section-line {
  flex: 1;
  height: 2rpx;
  background: linear-gradient(90deg, #e0e0e0 0%, transparent 100%);
}

/* 产品模块 */
.product-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.product-card {
  display: flex;
  background: #f8f9fa;
  border-radius: 16rpx;
  overflow: hidden;
  transition: all 0.3s ease;
}

.product-card:active {
  transform: scale(0.98);
  background: #f0f1f2;
}

.product-image {
  width: 128rpx;
  height: 128rpx;
  flex-shrink: 0;
}

.product-info {
  flex: 1;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 12rpx;
}

.product-desc {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.product-tags {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.tag {
  font-size: 22rpx;
  color: #1890ff;
  background: rgba(24, 144, 255, 0.1);
  padding: 8rpx 20rpx;
  border-radius: 8rpx;
}

/* 项目模块 */
.project-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.project-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 28rpx;
  transition: all 0.3s ease;
}

.project-card:active {
  transform: scale(0.98);
  background: #f0f1f2;
}

.project-content {
  flex: 1;
  padding-right: 20rpx;
}

.project-name {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 12rpx;
}

.project-intro {
  display: block;
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.project-meta {
  display: flex;
  gap: 32rpx;
}

.meta-item {
  font-size: 24rpx;
  color: #999999;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.meta-icon-img {
  width: 28rpx;
  height: 28rpx;
}

.project-status {
  flex-shrink: 0;
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-progress {
  background: rgba(24, 144, 255, 0.1);
  color: #1890ff;
}

.status-completed {
  background: rgba(82, 196, 26, 0.1);
  color: #52c41a;
}

/* 服务项目模块 */
.service-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.service-card {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 32rpx 28rpx;
  transition: all 0.3s ease;
}

.service-card:active {
  transform: scale(0.98);
  background: #f0f1f2;
}

.service-icon-img {
  width: 100rpx;
  height: 100rpx;
  flex-shrink: 0;
  background: linear-gradient(135deg, #1890ff 0%, #096dd9 100%);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(24, 144, 255, 0.2);
  padding: 16rpx;
}

.service-content {
  flex: 1;
  padding: 0 24rpx;
}

.service-name {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 12rpx;
}

.service-desc {
  display: block;
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.service-features {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.feature {
  font-size: 24rpx;
  color: #52c41a;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.feature-icon {
  width: 24rpx;
  height: 24rpx;
}

.service-arrow-img {
  width: 32rpx;
  height: 32rpx;
  flex-shrink: 0;
}
