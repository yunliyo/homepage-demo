.tool-container {
  min-height: 100vh;
  background: #F8F2F5;
  padding-bottom: 40rpx;
}

/* 轮播图板块 */
.banner-section {
  padding: 20rpx;
}

.banner-swiper {
  width: 100%;
  height: 360rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
}

.banner-item {
  width: 100%;
  height: 100%;
  position: relative;
}

.banner-image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

.banner-title {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx 20rpx;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
  color: #000000;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 0 0 20rpx 20rpx;
}

/* 图标导航板块 */
.icon-nav-section {
  margin: 20rpx 0;
  padding: 30rpx 20rpx;
}

.icon-nav-title {
  color: #000000;
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  padding-left: 10rpx;
}

.icon-nav-list {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.icon-nav-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 10rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
}

.icon-nav-item:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.icon-nav-icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 16rpx;
  border-radius: 20rpx;
  overflow: hidden;
  background: linear-gradient(135deg, #e8d4e0 0%, #d4a5c4 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-nav-icon image {
  width: 60%;
  height: 60%;
}

.icon-nav-name {
  color: #333;
  font-size: 24rpx;
  text-align: center;
}

/* 卡片板块 */
.card-section {
  padding: 30rpx 20rpx;
}

.card-title {
  color: #000000;
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  padding-left: 10rpx;
}

.card-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.card-item {
  width: calc(33.33% - 14rpx);
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
}

.card-item:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.card-image {
  width: 100%;
  padding-top: 100%;
  position: relative;
  background: linear-gradient(135deg, #e8d4e0 0%, #d4a5c4 100%);
}

.card-image image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.card-badge {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ffa502 100%);
  color: #fff;
  font-size: 18rpx;
  padding: 6rpx 12rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 107, 0.3);
  z-index: 2;
}

.card-external .card-image {
  background: linear-gradient(135deg, #a8e6cf 0%, #88d8b0 100%);
}

.card-external:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(136, 216, 176, 0.3);
}

.card-content {
  padding: 20rpx 12rpx;
  text-align: center;
}

.card-name {
  color: #333;
  font-size: 26rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.card-desc {
  color: #999;
  font-size: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 更多工具板块 */
.more-section {
  padding: 30rpx 20rpx;
  margin-top: 20rpx;
}

.more-content {
  background: linear-gradient(135deg, #e8d4e0 0%, #d4a5c4 100%);
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  box-shadow: 0 8rpx 20rpx rgba(212, 165, 196, 0.3);
}

.more-text {
  display: block;
  color: #000000;
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.more-desc {
  display: block;
  color: #000000;
  font-size: 24rpx;
}
